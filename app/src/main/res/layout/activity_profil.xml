<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- PROFILE IMAGE -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/me"
            android:layout_gravity="center"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/black" />

        <!-- NAME -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Citra Tiyan Arifera"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="18dp"
            android:layout_gravity="center" />

        <!-- ROLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sekolah_profil"
            android:textSize="15sp"
            android:textColor="#8A8A8A"
            android:layout_gravity="center"
            android:layout_marginTop="4dp" />

        <!-- MAIN CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:elevation="8dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/pink"
                android:padding="20dp">

                <!-- PASTEL BACKGROUND WRAPPER -->
                <!-- Username -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginBottom="12dp"
                    android:clipToPadding="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/satu_profil"
                        android:textSize="14sp"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/tvNama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Citra Tiyan Arifera"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="14sp"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="cantikcitra191@gmail.com"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Phone -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tiga_profil"
                        android:textSize="14sp"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+62 895 4016 xxxx"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Birthday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/empat_profil"
                        android:textSize="14sp"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/tvTTL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="13/02/2009"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Address -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lima_profil"
                        android:textSize="14sp"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/tvAlamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Joyotakan, Serengan, Surakarta"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
